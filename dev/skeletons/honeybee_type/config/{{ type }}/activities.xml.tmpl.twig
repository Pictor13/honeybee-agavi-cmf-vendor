<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/activities/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
>
    <ae:configuration>
        <activity_containers>
            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}" extends="default_type_activities">

                <activity name="view_resource" type="workflow">
                    <description>{{ type_prefix }}.activity.view_resource.description</description>
                    <label>{{ type_prefix }}.activity.view_resource.title</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.resource</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>view_resource</rel>
                        <rel>view{{ type_prefix }}</rel>
                    </rels>
                </activity>

                <activity name="view_history" type="workflow">
                    <description>{{ type_prefix }}.activity.view_history.description</description>
                    <label>{{ type_prefix }}.activity.view_history.title</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.history</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>history</rel>
                    </rels>
                </activity>

                <activity name="create_resource">
                    <description>{{ type_prefix }}.activity.create_resource.description</description>
                    <label>{{ type_prefix }}.activity.create_resource.title</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.create</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                        <rel>create{{ type_prefix }}</rel>
                    </rels>
                </activity>

                <activity name="collection">
                    <description>{{ type_prefix }}.activity.collection.description</description>
                    <label>{{ type_prefix }}.activity.collection.title</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                        <rel>{{ type_prefix }}_collection</rel>
                    </rels>
                </activity>

                <activity name="hierarchy">
                    <description>{{ type_prefix }}.activity.hierarchy.description</description>
                    <label>{{ type_prefix }}.activity.hierarchy.title</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.hierarchy</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>hierarchy</rel>
                        <rel>{{ type_prefix }}_hierarchy</rel>
                    </rels>
                </activity>

                <activity name="hierarchy_root">
                    <description>{{ type_prefix }}.activity.hierarchy.description</description>
                    <label>{{ type_prefix }}.activity.hierarchy.title</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.hierarchy</url>
                    <url_param name="resource" />
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>hierarchy</rel>
                        <rel>hierarchy_root</rel>
                        <rel>{{ type_prefix }}_hierarchy</rel>
                    </rels>
                </activity>

            </activity_container>

            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.resource.workflow.proceed">
                <activity name="cancel">
                    <description>{{ type_prefix }}.activity.cancel.description</description>
                    <label>{{ type_prefix }}.activity.cancel.title</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>cancel</rel>
                        <rel>collection</rel>
                    </rels>
                </activity>
            </activity_container>

            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.resource.modify">
            </activity_container>

            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.resource.modify.primary_activities">
                <activity name="save_resource">
                    <description>Datensatz speichern</description>
                    <label>Speichern</label>
                    <url type="route">null</url>
                    <verb>write</verb>
                    <rels>
                        <rel>activity</rel>
                        <rel>edit_resource</rel>
                        <rel>edit{{ type_prefix }}</rel>
                    </rels>
                </activity>
                <activity name="back_to_list">
                    <description>Zur端ck zur Liste von Nutzern</description>
                    <label>Zur端ck zur Liste</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                        <rel>{{ type_prefix }}_collection</rel>
                    </rels>
                </activity>
            </activity_container>

            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.create.primary_activities">
                <activity name="save_resource">
                    <description>Datensatz erstellen</description>
                    <label>Erstellen</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.collection</url>
                    <verb>write</verb>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                        <rel>create{{ type_prefix }}</rel>
                    </rels>
                </activity>
                <activity name="save_resource_and_continue">
                    <description>Datensatz erstellen und neuen anlegen</description>
                    <label>Erstellen und weiter</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.create</url>
                    <verb>write</verb>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                        <rel>create{{ type_prefix }}</rel>
                    </rels>
                </activity>
                <activity name="back_to_list">
                    <description>Zur端ck zur Liste von Nutzern</description>
                    <label>Zur端ck zur Liste</label>
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                        <rel>{{ type_prefix }}_collection</rel>
                    </rels>
                </activity>
            </activity_container>

        </activity_containers>
    </ae:configuration>
</ae:configurations>
