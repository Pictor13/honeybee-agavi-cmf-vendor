<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/view_templates/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration>
        <view_templates scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.hierarchy">
            <view_template name="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}">
                <tab name="{{ type_prefix }}s">
                    <panel name="main">
                        <row>
                            <cell>
                                <group name="{{ type_prefix }}">
                                    <field name="identifier" attribute_path="identifier" />
                                    <field name="workflow_state" attribute_path="workflow_state" />
                                    <field name="created_at" attribute_path="created_at" />
                                    <field name="modified_at" attribute_path="modified_at" />
                                </group>
                            </cell>
                        </row>
                    </panel>
                </tab>
            </view_template>

            <view_template name="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.parent">
                <tab name="{{ type_prefix }}s">
                    <panel name="main">
                        <row>
                            <cell>
                                <group name="{{ type_prefix }}">
                                    <field name="identifier" attribute_path="identifier" />
                                    <field name="workflow_state" attribute_path="workflow_state" />
                                    <field name="created_at" attribute_path="created_at" />
                                    <field name="modified_at" attribute_path="modified_at" />
                                </group>
                            </cell>
                        </row>
                    </panel>
                </tab>
            </view_template>
        </view_templates>
    </ae:configuration>
</ae:configurations>
