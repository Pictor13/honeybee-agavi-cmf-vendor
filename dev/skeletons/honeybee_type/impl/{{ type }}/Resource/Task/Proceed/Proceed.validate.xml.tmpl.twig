<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/{{ vendor }}_{{ package }}/config/validators.xml">
    <ae:configuration>
        <validators translation_domain="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.errors" method="read">
            <validator class="Honeybee\FrameworkBinding\Agavi\Validator\ResourceValidator" name="invalid_{{ type_prefix }}">
                <argument>resource</argument>
                <error>The given {{ type_prefix }}(identifier) is invalid.</error>
                <ae:parameter name="resource_type">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}</ae:parameter>
            </validator>
        </validators>

        <validators translation_domain="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.errors" method="write">
            <validator class="Honeybee\FrameworkBinding\Agavi\Validator\ProceedWorkflowCommandValidator" name="invalid_proceed_command">
                <argument>event</argument>
                <ae:parameter name="aggregate_root_type">{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}</ae:parameter>
                <ae:parameter name="identifier_arg">resource</ae:parameter>
                <ae:parameter name="command_implementor">{{ vendor }}\{{ package }}\{{ type }}\Model\Task\Proceed{{ type }}Workflow\Proceed{{ type }}WorkflowCommand</ae:parameter>
                <error>Invalid command payload given.</error>
                <error for="conflict_detected">Data has changed and conflicts with your attempt to modify it.</error>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>
