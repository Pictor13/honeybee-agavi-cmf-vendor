<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/view_templates/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration>
        <view_templates scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.resource.modify">
            <view_template name="{{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}">
                <tab name="content">
                    <panel name="main">
                        <row>
                            <cell>
                                <group name="primary">
                                    <field name="identifier" attribute_path="identifier" template="html/attribute/as_input_text.twig">
                                        <setting name="readonly">true</setting>
                                    </field>
                                    <field name="revision" attribute_path="revision" template="html/attribute/as_input_text.twig">
                                        <setting name="readonly">true</setting>
                                    </field>
                                </group>
                            </cell>
                        </row>
                    </panel>
                </tab>
            </view_template>
        </view_templates>

        <!--
            Templates for embedded entities are defined here.
            By default a template for an embedded type is named after the parent, adding the embed-attribute's name
            and the embed-type to the existing name/scope.
            In this case for an embed-type named "image_gallery" below an embed-attribute named "content_objects",
            the result name would be: {{ vendor_prefix }}.{{ package_prefix }}.{{ type_prefix }}.resource.modify.content_objects.image_gallery
        -->
    </ae:configuration>
</ae:configurations>
