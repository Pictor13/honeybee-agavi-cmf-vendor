<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/navigation/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
>
    <ae:configuration>

        <available_items>
            <items name="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}">
                <activity scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}">create_resource</activity>
                <activity scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}">collection</activity>
                <activity scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}">hierarchy_root</activity>
            </items>
        </available_items>

        <navigations default="main">
            <navigation name="main">
                <groups>
                    <group name="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}">
                        <include>{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}</include>
                    </group>
                </groups>
            </navigation>
        </navigations>

    </ae:configuration>
</ae:configurations>
