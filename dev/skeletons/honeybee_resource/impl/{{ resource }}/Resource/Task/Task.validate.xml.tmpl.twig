<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/{{ vendor }}_{{ package }}/config/validators.xml">
    <ae:configuration>
        <validators translation_domain="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.errors">
            <validator class="Honeybee\FrameworkBinding\Agavi\Validator\ResourceValidator" name="invalid_{{ resource_prefix }}">
                <argument>resource</argument>
                <error>The given {{ resource_prefix }}(identifier) is invalid.</error>
                <ae:parameter name="resource_type">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}</ae:parameter>
            </validator>

            <validator class="string" name="invalid_workflow_event" required="true">
                <argument>event</argument>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>
