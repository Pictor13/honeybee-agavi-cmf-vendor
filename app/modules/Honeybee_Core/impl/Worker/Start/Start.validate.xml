<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.config_dir%/validators.xml">
    <ae:configuration>
        <validators>

            <validator class="inarray" name="invalid_type" required="true">
                <argument>type</argument>
                <error>Invalid or missing 'type' parameter. Expecting one of 'command' or 'event'.</error>
                <ae:parameter name="values">command,event,job</ae:parameter>
            </validator>

            <validator class="string" name="invalid_queue" required="false">
                <argument>queue</argument>
                <error>Invalid or missing 'queue' parameter.</error>
            </validator>

            <validator class="string" name="invalid_exchange" required="false">
                <argument>exchange</argument>
                <error>Invalid or missing 'exchange' parameter.</error>
            </validator>

            <validator class="string" name="invalid_binding" required="false">
                <argument>binding</argument>
                <error>Invalid or missing 'binding' parameter.</error>
            </validator>

        </validators>
    </ae:configuration>
</ae:configurations>
