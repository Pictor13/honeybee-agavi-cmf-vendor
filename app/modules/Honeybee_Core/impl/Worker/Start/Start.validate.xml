<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.config_dir%/validators.xml">
    <ae:configuration>
        <validators>

            <validator class="string" name="invalid_exchange" required="false">
                <argument>exchange</argument>
                <error>Invalid or missing 'exchange' parameter.</error>
            </validator>

            <validator class="string" name="invalid_job" required="true">
                <argument>job</argument>
                <error>Invalid or missing 'job' parameter.</error>
            </validator>

        </validators>
    </ae:configuration>
</ae:configurations>
