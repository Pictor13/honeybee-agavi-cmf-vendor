<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/services/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration>
        <service_map>
            <service_definitions>

                <service name="honeybee.system_account.mail_service">
                    <class>Honeybee\SystemAccount\MailService</class>
                    <settings>
                        <setting name="sender_email">%email.sender_email%</setting>
                        <setting name="sender_name">%email.sender_name%</setting>
                        <setting name="from_email">%email.from_email%</setting>
                        <setting name="from_name">%email.from_name%</setting>
                        <setting name="reply_email">%email.reply_email%</setting>
                        <setting name="reply_name">%email.reply_email%</setting>
                    </settings>
                </service>

            </service_definitions>
        </service_map>
    </ae:configuration>
</ae:configurations>
