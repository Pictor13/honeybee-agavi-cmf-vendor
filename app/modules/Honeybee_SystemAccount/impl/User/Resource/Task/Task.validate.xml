<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/Honeybee_SystemAccount/config/validators.xml">
    <ae:configuration>
        <validators translation_domain="honeybee.system_account.user.errors">

            <validator class="Honeygavi\Agavi\Validator\ResourceValidator" name="invalid_user">
                <argument>resource</argument>
                <error>The given user(identifier) is invalid.</error>
                <ae:parameter name="resource_type">honeybee.system_account.user</ae:parameter>
            </validator>

            <validator class="string" name="invalid_workflow_event" required="true">
                <argument>event</argument>
            </validator>

        </validators>

    </ae:configuration>
</ae:configurations>
