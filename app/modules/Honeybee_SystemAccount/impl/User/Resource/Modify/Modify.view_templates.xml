<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/view_templates/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration>
        <view_templates scope="honeybee.system_account.user.resource.modify">
            <view_template name="honeybee.system_account.user.html">
                <tab name="content">
                    <panel name="main">
                        <row css="">
                            <cell css="portable-1/1 desk-wide-1/4">
                                <group name="primary">
                                    <field name="username" attribute_path="username" template="html/attribute/as_input_text.twig">
                                        <!--
                                            If not defined, a default translation domain in generated for fields:
                                                <prefix>.fields.<path_to_attribute>
                                        -->
                                        <setting name="translation_domain">honeybee.system_account.user.fields</setting>
                                        <!--
                                            Will overwrite the eventual default 'mandatory' option of the attribute.
                                            It will have effect just on the client-side validation
                                        -->
                                        <setting name="required">true</setting>
                                        <!-- Set attribute as disabled or readonly -->
                                        <setting name="disabled"></setting>
                                        <setting name="readonly"></setting>
                                        <!--
                                            Will define custom translation keys to use into the view_template (is possible also to
                                            override the default translation keys).
                                            These keys will be automatically translated (if available in the translations.xml)
                                            and made available in the 'translations' view_template parameter.

                                                e.g.  use 'translations.placeholder' to retrieve the value in the view_template
                                        -->
                                        <setting name="translation_keys">
                                            <setting name="placeholder">placeholder_value</setting>
                                        </setting>
                                    </field>
                                    <field name="email" attribute_path="email" template="html/attribute/email/as_input_email.twig" />
                                </group>
                            </cell>
                            <cell css="desk-wide-1/4">
                                <group name="stammdaten">
                                    <field name="firstname" attribute_path="firstname" template="html/attribute/as_input_text.twig" />
                                    <field name="lastname" attribute_path="lastname" template="html/attribute/as_input_text.twig" />
                                </group>
                            </cell>
                            <cell css="desk-wide-1/4">
                                <group name="secondary">
                                    <field name="role" attribute_path="role" template="html/attribute/choice/as_input_select.twig" />
                                </group>
                            </cell>
                        </row>
                    </panel>
                </tab>
                <tab name="meta" css="">
                    <panel name="meta">
                        <row>
                            <cell>
                                <group name="meta_content">
                                    <field name="uuid" attribute_path="uuid" />
                                    <field name="workflow_state" attribute_path="workflow_state" template="html/attribute/as_input_text.twig"/>
                                    <field name="language" attribute_path="language" />
                                    <field name="identifier" attribute_path="identifier" template="html/attribute/as_input_hidden.twig" />
                                    <field name="revision" attribute_path="revision" template="html/attribute/as_input_hidden.twig" />
                                    <field name="token_expire_date" attribute_path="token_expire_date" template="html/attribute/datetime/as_input.twig">
                                        <setting name="widget_options">
                                            <setting name="display_format">L LTS</setting>
                                            <setting name="display_mode">table</setting>
                                        </setting>
                                    </field>
                                </group>
                            </cell>
                        </row>
                    </panel>
                </tab>
            </view_template>
        </view_templates>
    </ae:configuration>
</ae:configurations>
