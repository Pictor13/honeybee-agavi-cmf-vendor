<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/Honeybee_SystemAccount/config/validators.xml">
    <ae:configuration translation_domain="honeybee.system_account.user.errors">

        <validators method="write">
            <validator class="Honeygavi\Agavi\Validator\BulkValidator" name="invalid_bulk_request">
                <argument>%core.http_post_file_name%</argument>
                <error for="invalid_format">Invalid bulk format. Expecting newline delimited command instruction tuples.</error>
                <error for="invalid_meta_data">Invalid bulk-operation meta-data given.</error>
                <error for="invalid_payload">Invalid bulk-operation payload given.</error>
            </validator>
        </validators>

    </ae:configuration>
</ae:configurations>
