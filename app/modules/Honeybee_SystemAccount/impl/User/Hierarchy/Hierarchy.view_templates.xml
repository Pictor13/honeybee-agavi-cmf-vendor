<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/view_templates/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration>

        <view_templates scope="honeybee.system_account.user.hierarchy">

            <view_template name="honeybee.system_account.user">
                <tab name="users">
                    <panel name="main">
                        <row>
                            <cell>
                                <group name="user">
                                    <field name="username" attribute_path="username" />
                                    <field name="firstname" attribute_path="firstname" />
                                    <field name="lastname" attribute_path="lastname" />
                                </group>
                            </cell>
                        </row>
                    </panel>
                </tab>
            </view_template>

            <view_template name="parent_user">
                <tab name="users">
                    <panel name="main">
                        <row>
                            <cell>
                                <group name="user">
                                    <field name="username" attribute_path="username" />
                                    <field name="email" attribute_path="email" />
                                </group>
                            </cell>
                        </row>
                    </panel>
                </tab>
            </view_template>

        </view_templates>

    </ae:configuration>
</ae:configurations>
