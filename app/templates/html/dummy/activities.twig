            <h4>Splitbutton</h4>
            {% embed 'html/activity_map/as_splitbutton.twig' with {
                toggle_disabled: false,
            } %}
                {% block default %}
                    {% include "html/activity/link.twig" with activities[0] %}
                {% endblock %}
                {% block more %}
                    <ul>
                        {% for a in activities %}
                            <li>{% include "html/activity/link.twig" with a %}</li>
                        {% endfor %}
                    </ul>
                {% endblock %}
            {% endembed %}
