                {% endblock %}
            {% endembed %}
        </div>
    </div>
    <div class="layout">
        <div class="layout__item u-1-of-2-lap u-1-of-1-palm">
            <h4>List</h4>
            {% embed 'html/activity_map/as_list.twig' with {
                emphasized: true
            } %}
                {% block more %}
                    <ul>
                        {% for a in activities %}
