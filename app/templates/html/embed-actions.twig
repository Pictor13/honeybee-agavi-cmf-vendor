{#
    Usage of this template is like this:

    {% embed "html/embed-actions.twig" with { 'grouped_base_path': grouped_base_path, 'add_item_to_parent_list_allowed': add_item_to_parent_list_allowed } only %}{% endembed %}

    Default styles are defined in this SCSS partial:

    pub/static/themes/honeybee/lib/objects/embed-actions/_objects.embed-actions.scss
#}{% spaceless %}
{% set name = name | default("hb-embed-actions") %}
{% set css = css | default("") %}
{% set label_id = label_id | default("label-" ~ random()) %}
<ul class="{{ name }} {{ css }}">
    <li class="hb-embed-action hb-embed-action__delete">
        <input type="radio" value="__delete" name="{{ grouped_base_path }}[__action]" id="{{ label_id ~ "-delete" }}" />
        <label for="{{ label_id ~ "-delete" }}" title="delete">&#10060;</label>
    </li>
    {% if add_item_to_parent_list_allowed %}
    <li class="hb-embed-action hb-embed-action__duplicate">
        <input type="radio" value="__duplicate" name="{{ grouped_base_path }}[__action]" id="{{ label_id ~ "-duplicate" }}" />
        <label for="{{ label_id ~ "-duplicate" }}" title="duplicate">&#8634;</label>
    </li>
    {% endif %}
    <li class="hb-embed-action hb-embed-action__up">
        <input type="radio" value="__move-up" name="{{ grouped_base_path }}[__action]" id="{{ label_id ~ "-moveup" }}" />
        <label for="{{ label_id ~ "-moveup" }}" title="move up">&#9650;</label>
    </li>
    <li class="hb-embed-action hb-embed-action__down">
        <input type="radio" value="__move-down" name="{{ grouped_base_path }}[__action]" id="{{ label_id ~ "-movedown" }}" />
        <label for="{{ label_id ~ "-movedown" }}" title="move down">&#9660;</label>
    </li>
    <li class="hb-embed-action hb-embed-action__none">
        <input type="radio" value="" name="{{ grouped_base_path }}[__action]" id="{{ label_id ~ "-none" }}" />
        <label for="{{ label_id ~ "-none" }}" title="do nothing">â€“</label>
    </li>
</ul>
{% endspaceless %}
